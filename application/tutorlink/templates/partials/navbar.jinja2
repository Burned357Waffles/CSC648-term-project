<nav id="nav-bar">
    <div id="nav-left">
        <a id="tutorlink-logo" href="/"><img src="/static/image/test/logo.jpg" alt="TutorLink Logo Location"></a>
        <a id="about-us" class="nav-link" href="/about">About Us</a>
    </div>

    <span id="warning-label">SFSU Software Engineering Project CSC 648-848, Fall 2023. For Demonstration Only.</span>

    {% set form = search_form() %}
    <form id="search-bar" method="POST" action="/search">
        {{ form.csrf_token }}

        <div id="search-bar-bg">
        {% for field in form.data.keys() %}
        {% if field != "csrf_token" and field != "submit" %}
            {{ form[field] }}
            {% if form[field]['errors'] %}
            <ul class="errors">
                {% for error in form[field]['errors'] %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
            {% endif %}
        {% endif %}
        {% endfor %}
        </div>
    </form>

    <a id="tutor-signup" class="nav-link" href="/tutor/register">Register as a Tutor</a>

    <div id="nav-right">
    {% if isLoggedIn %}
    {% if username %}
        <span id="username-plate" class="nav-link">Welcome, {{ username }} ▼</span>
    {% else %}
        <span id="username-plate" class="nav-link">Welcome, &lt;user&gt; ▼</span>
    {% endif %}
        <br>
        <div id="user-dropdown" class="not-visible">
            <a class="nav-link drop-link" href="/dashboard">Dashboard</a>
            <br>
            <a class="nav-link drop-link" href="/settings">Settings</a>
            <br>
            <a class="nav-link drop-link" href="/logout">Log out</a>
        </div>
    {% else %}
        <a id="login" class="nav-link" href="/acc/login">Login</a>
        <br>
        <a id="register" class="nav-link" href="/acc/register">Sign up</a>
    {% endif %}
    </div>
</nav>
