{% set title = "Register"%}
{% set css = ["register.css", "flash_messages.css"]%}
{% extends "base.jinja2"%}

{% block head %}
    {{ super() }}
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"/>
{% endblock %}

{% block body %}
<div class="register-body">
        {% for message in get_flashed_messages() %}
            <div class="alert alert-warning" id="flash-message-popup">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ message }}
            </div> 
        {%endfor %}
    <script>
    document.querySelector('.close').addEventListener('click', function() {
        document.getElementById('flash-message-popup').style.display = 'none';
    });
    </script>
<div class="register-wrapper">
    <h1>Sign Up</h1>
    <form method="POST">
        {{ form.csrf_token }}
        
        <div class="register-box">
            <input type="text" name="username" placeholder="Username" required>
            {% if form.username.errors %}
                <ul class="errors">
                    {% for error in form.username.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

        <div class="register-box">
            <input type="text" name="email" placeholder="Email" required>
            {% if form.email.errors %}
                <ul class="errors">
                    {% for error in form.email.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

        <div class="register-box">
            <input type="password" name="password" placeholder="Password" required>
            {% if form.password.errors %}
                <ul class="errors">
                    {% for error in form.password.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="register-agreement">
        <input type="checkbox" required>I agree to the <b>TutorLink Terms</b>
        </div>
        <div>
            <button class="btn" type="submit">Sign Up</button>
        </div>
        <div class="register-login">
        Already a member? <a href="{{ url_for('login_page') }}"><b>Log In</b></a>
        </div>
    </form>
</div>

    <div class="messages">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                <ul class="messages">
                    {% for category, message in messages %}
                        <li class="message-{{ category }}">{{ message }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        {% endwith %}
    </div>
    </div>
{% endblock %}
