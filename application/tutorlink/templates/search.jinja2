{% extends "base.jinja2" %}

{% block head %}
    {{ super() }}
{% endblock %}

{% block body %}
    <h1>CSC-648-03 Fall 2023</h1>
    <h2>Team 02</h2>

    {% if res != None %}
        <p> === Results === </p>
        <div class="new-tutors-clip-container">
            <div class="new-tutors-container">
                <div class="tutor-row">
                    {% for tutor in res %}
                        {% set tutor=tutor %}
                        {% set subj_db=subj_db %}
                        {% include '/partials/tutor_post.jinja2' %}
                        {% if loop.index % 4 == 0 %}
                            <div style="clear: both;"></div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <p> === End Of Results ===</p>
    {% else %}
        <p> === No Search Term Entered ===</p>
    {% endif %}
{% endblock %}
