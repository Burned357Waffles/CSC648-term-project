{% set title = tutor.tutor_name ~ "'s Profile" %}
{% set css = ["tutor.css"] %}
{# {% set js = [""] %} #}
{% extends "base.jinja2" %}


{% block head %}
    {{ super() }}
{% endblock %}

{% block body %}
    <div id="tutor-profile" class="bg">
        <img src="{{ url_for('static', filename=(tutor.tutor_photo)) }}" alt="{{ tutor.tutor_name }}'s Photo">
        <span id="tutor-name">{{tutor.tutor_name}}</span>
    </div>
    <br>

    <div id="tutor-media" class="bg">
        <span>CV/Flyer:</span>
        <a class="file" href="{{ url_for('static', filename=(tutor.tutor_cv)) }}" target="_blank">{{ cv_filename(tutor.tutor_cv) }}</a>
        <br>
        <br>
        <span>Video:</span>
        <a class="file" href="{{ tutor.tutor_vid }}" target="_blank">YouTube Link</a>
        <br>
    </div>
    <br>

    <div id="tutor-info">
        <table>
            <tr>
                <th >Subject:</th>
                <td class="bg">{{ subj_db.query.filter_by(subj_id=tutor.tutor_subj).first().subj_short }}</td>
            </tr>
            <tr>
                <th >Class:</th>
                <td class="bg">{{ tutor.tutor_subj_num }}</td>
            </tr>
            <tr>
                <th >Description:</th>
                <td class="bg">{{ tutor.tutor_bio }}</td>
            </tr>
        </table>
    </div>

    {# This link will need to be replaced with actual messaging route #}
    <a id="message-button" class="bg" href="/message/{{ tutor.tutor_id }}" target="_blank">Send Message</a>
{% endblock %}