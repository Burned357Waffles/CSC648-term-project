<nav id="nav-bar">
    <hr class="line-break">

    <div id="nav-left">
        <a href="/about" class="nav-link">About</a>
        <a href="/recents" class="nav-link">Recent Posts</a>
        <a href="/postimage" class="nav-link">Create Post</a>
    </div>


    {% set form = search_form() %}
    <form id="search-bar" method="POST">
        {{ form.csrf_token }}

        {% for field in form.data.keys() %}
        {% if field != "csrf_token" and field != "submit" %}
        <fieldset class="{{ field }}">
            {{ form[field]['label'] }} {{ form[field] }}
            {% if form[field]['errors'] %}
            <ul class="errors">
                {% for error in form[field]['errors'] %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
            {% endif %}
        </fieldset>
        {% endif %}
        {% endfor %}

        <div class="submit-button">
            {{ form.submit }}
        </div>
    </form>


    <div id="nav-right">
    {% if isLoggedIn %}
        <a id="username-plate" href="/profile/{{ username }}">{{ username }}</a>
        <a id="logout-button" class="nav-link">Logout</a>
    {% else %}
        <a id="login" href="/login" class="nav-link">Login</a>
        <a id="register" href="/register" class="nav-link">Register</a>
    {% endif %}
    </div>

    <br>
    <hr class="line-break">
</nav>
