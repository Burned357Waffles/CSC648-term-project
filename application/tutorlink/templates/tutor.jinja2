{% set title = "Tutor Profile" %}
{% set css = ["tutor.css"] %}
{# {% set js = [""] %} #}
{% extends "base.jinja2" %}


{% block head %}
    {{ super() }}
{% endblock %}

{% block body %}
    <div id="tutor-profile" class="bg">
        <img src="{{ url_for('static', filename=(tutor.tutor_photo)) }}" alt="{{ tutor.tutor_name }}'s Photo">
        <span>{{tutor.tutor_name}}</span>
    </div>
    <br>

    <div id="tutor-media" class="bg">
        <span>CV/Flyer:</span>
        <a href="{{ url_for('static', filename=(tutor.tutor_cv)) }}" target="_blank">{{ cv_filename(tutor.tutor_cv) }}</a>
        <br>
        <span>Video:</span>
        <a href="{{ tutor.tutor_vid }}" target="_blank">link</a>
        <br>
    </div>
    <br>

    {# This link will need to be replaced with actual messaging route #}
    <a id="message-button" class="bg" href="/message/{{ tutor.tutor_id }}" target="_blank">Send Message</a>
    <br>

    <div id="tutor-info">
        <span>Subject:</span>
        <span class="bg">{{ subj_db.query.filter_by(subj_id=tutor.tutor_subj).first().subj_short }}</span>
        <br>
        <span>Class:</span>
        <span class="bg">{{ tutor.tutor_subj_num }}</span>
        <br>
        <span>Description:</span>
        <span class="bg">{{ tutor.tutor_bio }}</span>
    </div>
{% endblock %}