{% extends "base.jinja2" %}

{% block head %}
    {{ super() }}
{% endblock %}

{% block body %}
<div id="tutor-profile" class="bg">
    <span>User:</span>
    <img src="{{ url_for('static', filename=(tutor.tutor_photo)) }}" alt="{{ tutor.tutor_name }}'s Photo">
    <span id="tutor-name">{{tutor.tutor_name}}</span>
</div>
<div id="subject-line" class="bg">
    <span>Subject:</span>
    <span class="bg">{{ subj_db.query.filter_by(subj_id=tutor.tutor_subj).first().subj_short }}</span>
    <span class="bg">{{ tutor.tutor_subj_num }}</span>
</div>

<br>
<span>Message:</span>
{% set form = message_form() %}
<form id="message-form" method="POST">
    {% for field in form.data.keys() %}
    {% if field != "csrf_token" and field != "submit" %}
        {{ form[field] }}
        {% if form[field]['errors'] %}
        <ul class="errors">
            {% for error in form[field]['errors'] %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    {% endif %}
    {% endfor %}
</form>
{% endblock %}