{% set title = "Search - Tutorlink" %}
{% set css = ["home.css", "tutor_post.css"] %}
{% set js = ["home.js"] %}
{% extends "base.jinja2" %}

{% block head %}
    {{ super() }}

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
    <h1 id="page-title">Find Tutors For Your SFSU Courses</h1>

    <div class="carousel-clip-container">
        <h2 id="carousel-title">Browse our Top Subjects</h2>
        <div id="subjectCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for subject in subject_list %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <div class="rectangle">
                            {{ subject.text }}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#subjectCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#subjectCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="new-tutors-clip-container">
        <h2 id="new-tutor-title">Browse Newly Added Tutors</h2>
        <div class="new-tutors-container">
            <div class="tutor-row">
                {% for tutor in tutor_list %}
                    {% set tutor=tutor %}
                    {% set subj_db=subj_db %}
                    {% include '/partials/tutor_post.jinja2' %}
                    {% if loop.index % 4 == 0 %}
                        <div style="clear: both;"></div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
